<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane" prefHeight="920.0" prefWidth="1300.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.views.viewMain">
    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <VBox prefHeight="920.0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
            <VBox fx:id="titleBar" style="-fx-background-color: #0a3b5c; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 8, 0.3, 0, 2);" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 5 10 5 10;" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 5 10 5 10;" HBox.hgrow="ALWAYS">
                        <Label text="JAVA-SORTER 2.0.1" textFill="WHITE" HBox.hgrow="ALWAYS">
                            <font>
                                <Font name="System Bold" size="17.0" />
                            </font>
                        </Label>
                    </HBox>

                    <HBox alignment="CENTER_RIGHT" spacing="10">
                        <Button fx:id="btnMinimize" text="—" />
                        <Button fx:id="btnMaximize" text="□" />
                        <Button fx:id="btnClose" text="×" />
                    </HBox>
                </HBox>
            </VBox>
            <VBox alignment="CENTER" layoutX="2.0" style="-fx-background-color: #c1c5c7;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="65.0" HBox.hgrow="ALWAYS" VBox.vgrow="NEVER">
                <HBox alignment="CENTER" HBox.hgrow="ALWAYS" VBox.vgrow="NEVER">
                    <Label id="title" fx:id="titleLabel" alignment="CENTER" contentDisplay="CENTER" text="..." textFill="#013b65">
                        <font>
                            <Font name="System Bold" size="18.0" />
                        </font>
                        <padding>
                            <Insets top="10.0" />
                        </padding>
                    </Label>
                </HBox>
            </VBox>
            <AnchorPane fx:id="contentPane" layoutY="117.0" style="-fx-background-color: #e6eaed;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="117.0" VBox.vgrow="ALWAYS" />
         <VBox.margin>
            <Insets />
         </VBox.margin>
        </VBox>

        <VBox fx:id="terminalPanel" style="-fx-background-color: black;" visible="false" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
            <TextArea fx:id="terminalOutput" editable="false" prefHeight="920.0" style="-fx-control-inner-background: black; -fx-text-fill: lime;" wrapText="true" VBox.vgrow="ALWAYS" />
        </VBox>

        <HBox alignment="CENTER_RIGHT" style="-fx-padding: 2;">
            <Label prefHeight="17.0" prefWidth="98.0" text="Open Terminal">
            <font>
               <Font name="Arial Italic" size="12.0" />
            </font></Label>
            <Button fx:id="btnToggleTerminal" text="⬇" />
         <Button fx:id="btnPauseTerminal" text="pause" />
        </HBox>

    </VBox>
</AnchorPane>
