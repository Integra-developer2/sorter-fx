<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="900.0" prefWidth="1300.0" spacing="20.0" xmlns="http://javafx.com/javafx/22"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.views.viewStockShooting">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
   </padding>
   <VBox alignment="CENTER" prefHeight="700.0" VBox.vgrow="ALWAYS">
      <HBox VBox.vgrow="ALWAYS">
         <VBox HBox.hgrow="ALWAYS">
            <HBox.margin>
               <Insets/>
            </HBox.margin>
            <TableView fx:id="tableView" editable="true" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="findBarcodes" editable="false" maxWidth="1.7976931348623157E308"
                               minWidth="-1.0" prefWidth="300.0" text="TROVA"/>
               </columns>
            </TableView>
         </VBox>
         <VBox HBox.hgrow="ALWAYS">
            <HBox.margin>
               <Insets left="10.0"/>
            </HBox.margin>
            <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
               <Label alignment="CENTER" contentDisplay="CENTER" text="CERCA BARCODE" VBox.vgrow="ALWAYS">
                  <font>
                     <Font name="System Bold" size="13.0"/>
                  </font>
                  <padding>
                     <Insets bottom="2.0" left="5.0" right="5.0" top="2.0"/>
                  </padding>
               </Label>
               <TextArea fx:id="searchBarcodes" VBox.vgrow="ALWAYS"/>
            </VBox>
            <VBox VBox.vgrow="ALWAYS">
               <TableView fx:id="tableView1" prefWidth="300.0" VBox.vgrow="ALWAYS">
                  <columns>
                     <TableColumn fx:id="notFound" editable="false" maxWidth="1.7976931348623157E308"
                                  minWidth="-1.0" prefWidth="600.0" text="NON TROVATI"/>
                  </columns>
                  <VBox.margin>
                     <Insets top="20.0"/>
                  </VBox.margin>
               </TableView>
            </VBox>
         </VBox>
      </HBox>
      <VBox.margin>
         <Insets top="30.0"/>
      </VBox.margin>
   </VBox>
   <VBox alignment="CENTER_RIGHT" VBox.vgrow="ALWAYS">
      <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
         <Button fx:id="btnBackwards" alignment="CENTER" prefHeight="59.0" prefWidth="263.0"
                 style="-fx-background-color: #005075;" text="INDIETRO" textFill="WHITE" HBox.hgrow="NEVER">
            <cursor>
               <Cursor fx:constant="HAND"/>
            </cursor>
            <font>
               <Font name="Arial Black" size="20.0"/>
            </font>
            <HBox.margin>
               <Insets right="10.0"/>
            </HBox.margin>
         </Button>
         <Button fx:id="btnForward" alignment="CENTER" prefHeight="59.0" prefWidth="263.0"
                 style="-fx-background-color: #005075;" text="AVANTI" textFill="WHITE" HBox.hgrow="NEVER">
            <cursor>
               <Cursor fx:constant="HAND"/>
            </cursor>
            <font>
               <Font name="Arial Black" size="20.0"/>
            </font>
            <HBox.margin>
               <Insets/>
            </HBox.margin>
         </Button>
      </HBox>
   </VBox>
</VBox>
