{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "java (buildArtifact)",
			"mainClass": "app.App",
			"targetPath": "${workspaceFolder}/${workspaceFolderBasename}.jar",
			"elements": [
				"${compileOutput}",
				"${dependencies}"
			],
			"problemMatcher": [],
			"label": "java (buildArtifact): sorter-fx",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Set Java 22 Environment",
			"type": "shell",
			"command": "set JAVA_HOME=C:\\Java\\jdk22 && set PATH=%JAVA_HOME%\\bin;%PATH%",
			"problemMatcher": []
		}
	]
}
